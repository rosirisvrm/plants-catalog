---
import type { Plant } from '../types';

interface Props{
    plant: Plant;
}
---
<div class="bg-[#B6DB9F] p-8 rounded-lg shadow-md hover:shadow-2xl transition-shadow duration-300 flex flex-col justify-between">
    <div class="flex flex-col">
        <img alt="Plant image" class="w-full h-64 object-cover rounded-md mb-4 bg-white" 
            src={Astro.props.plant.imageUrl || ''}
        />
        <h3 class="text-xl font-semibold text-emerald-700 mb-4">{Astro.props.plant.scientificName || ''}</h3>
        <p class="text-gray-600 mb-8 text-sm">{Astro.props.plant.morphology.generalDescription || ''}</p>
    </div>
    <a class="hover:bg-emerald-700 bg-emerald-600 text-white font-semibold py-2 px-6 
        rounded-md text-base transition duration-300 w-full lg:w-1/2 text-center" 
        href={`/planta/${Astro.props.plant.id}`}
    >
        Ver m√°s
    </a>
</div>
