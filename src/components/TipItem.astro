---
import type { Tip } from '../types'

interface Props {
    tip: Tip
}
---

<div class="flex items-start">
    {Astro.props.tip.icon}
    <div>
        <h4 class="text-xl font-semibold text-emerald-700 mb-1 ml-2">{Astro.props.tip.title}</h4>
        <p class="text-gray-600">{Astro.props.tip.text}</p>
    </div>
</div>